<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mycontrolfinances">

    <application
        android:name=".database.RealmConfig"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/MyAppTheme">
        <activity android:name=".view.ListCategoriaActivity"></activity>
        <activity android:name=".view.AddCategoriaActivity" />
        <activity android:name=".view.AddContaReceberActivity" />
        <activity android:name=".view.AddContaPagarActivity" />
        <activity
            android:name=".view.EditContaCorrenteActivity"
            android:parentActivityName=".view.ListContaCorrenteActivity" />
        <activity
            android:name=".view.AddContaCorrenteActivity"
            android:parentActivityName=".view.ListContaCorrenteActivity" />
        <activity
            android:name=".view.ListContaCorrenteActivity"
            android:parentActivityName=".view.MainActivity" />
        <activity
            android:name=".view.EditCartaoActivity"
            android:parentActivityName=".view.ListCartaoActivity" />
        <activity
            android:name=".view.AddCartaoActivity"
            android:parentActivityName=".view.ListCartaoActivity" />
        <activity
            android:name=".view.ListCartaoActivity"
            android:label="@string/title_activity_list_cartao"
            android:parentActivityName=".view.MainActivity"
            android:theme="@style/MyAppTheme.NoActionBar" />
        <activity
            android:name=".view.AddTerceiroActivity"
            android:parentActivityName=".view.listaTerceirosActivity" />
        <activity
            android:name=".view.EditTerceiroActivity"
            android:parentActivityName=".view.listaTerceirosActivity" />
        <activity
            android:name=".view.listaTerceirosActivity"
            android:label="@string/title_activity_lista_terceiros"
            android:launchMode="singleTop"
            android:parentActivityName=".view.MainActivity"
            android:theme="@style/MyAppTheme.NoActionBar" />
        <activity
            android:name=".view.MainActivity"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>