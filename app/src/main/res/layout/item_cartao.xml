<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardElevation="5dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/cartao_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="monospace"
            android:lines="1"
            android:textSize="20dp"
            android:textStyle="bold"
            android:typeface="monospace"
            tools:text="CartÃ£o name"></TextView>

        <TextView
            android:id="@+id/numero_Cartao"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/cartao_name"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="monospace"
            android:textSize="15dp"
            android:textStyle="normal"
            android:typeface="monospace"
            tools:text="9999"></TextView>

        <TextView
            android:id="@+id/bandeira_Cartao"
            android:layout_width="144dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/cartao_name"
            android:layout_marginStart="7dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_toEndOf="@+id/numero_Cartao"
            android:fontFamily="monospace"
            android:textSize="15dp"
            android:textStyle="normal"
            android:typeface="monospace"
            tools:text="Visa"></TextView>

        <!--            <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_below="@id/terceiro_name"
                        android:layout_marginTop="15dp"
                        android:background="#000">
                    </View>-->

        <TextView
            android:id="@+id/vencimento_Cartao"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/cartao_name"
            android:layout_marginLeft="230dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="monospace"
            android:textSize="15dp"
            android:textStyle="normal"
            android:typeface="monospace"
            tools:text="Venc:30"></TextView>

        <ImageView
            android:id="@+id/delete_image_view"
            android:layout_width="42dp"
            android:layout_height="57dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="11dp"
            android:layout_marginRight="2dp"

            android:src="@android:drawable/ic_menu_delete"></ImageView>

    </RelativeLayout>

</androidx.cardview.widget.CardView>